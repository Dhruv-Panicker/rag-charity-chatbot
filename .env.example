# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=gpt-4  # or claude-3-sonnet, etc.

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # or pinecone
CHROMA_DB_PATH=./data/vector_store
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=charity-rag-index
PINECONE_ENVIRONMENT=us-west1-gcp

# Web Scraping Configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
MAX_PAGES_TO_SCRAPE=50
USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)

# PDF Generation
PDF_OUTPUT_DIR=./data/pdfs
PDF_CHUNK_SIZE=2000

# Chunking Strategy
CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNKING_METHOD=semantic  # or fixed, sliding

# RAG Configuration
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.3
TEMPERATURE=0.3
MAX_TOKENS=1024

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Database
DATABASE_URL=sqlite:///./data/app.db

# Environment
ENVIRONMENT=development  # or production
